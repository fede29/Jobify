<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.fiuba.taller2.jobify.fragment.ProfileFragment"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" >

    <RelativeLayout android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/profile_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <include layout="@layout/view_profile_pic"/>

            <com.fiuba.taller2.jobify.view.ProfileBasicLayout
                android:id="@+id/basic_layout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <com.fiuba.taller2.jobify.view.ProfileExtendedLayout
                android:id="@+id/extended_layout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        </LinearLayout>

        <ProgressBar style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"/>

    </RelativeLayout>

</ScrollView>